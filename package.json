{
  "name": "better-than-nothing-ci",
  "version": "0.5.0",
  "description": "BetterThanNothing CI: a build system that's better than nothing! Provides a way for you to automate console commands in a folder (on a cron schedule) and view the output in a browser.",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && tsc && node server.js",
    "build": "cd client && ng build",
    "prod": "cd client && ng build --prod"
  },
  "keywords": [
    "ci",
    "build system"
  ],
  "author": "Luke Zehrung",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",    
    "cross-spawn": "^6.0.5",
    "express": "^4.16.3",
    "express-async-await": "^1.1.0",
    "node-schedule": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "socket.io": "^2.1.1",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.7",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/node": "^10.7.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/node-schedule": "^1.2.2",
    "@types/socket.io": "^1.4.36"
  }
}
